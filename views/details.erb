<h4>Post details:</h4>
<p>
  <br />
    <%= @row['content'] %>
  <br />
  <br />
  Added at <%= @row['created_date'] %>
  <br />
</p>
<br />
<h4>Comments:</h4>
<p>
    <form action="/details/<%= @row['id'] %>" method="POST" role="form">
      <textarea name="content" class="form-control" rows="6" placeholder="Type comment text here" style="width: 600px"></textarea>
      <br />
      <button type="submit" class="btn btn-primary">Add comment</button>
    </form>
</p>